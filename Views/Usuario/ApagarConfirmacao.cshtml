@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de exclusão de usuário";
}

<div cite="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Nome) ?</h3>
    <a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
   
</div>